{
  "name": "obudget-api",
  "version": "0.1.0",
  "description": "API for free and open source budgeting",
  "repository": {
    "type": "git",
    "url": "https://github.com/OBudget/obudget-api"
  },
  "keywords": [],
  "author": "Sergei Shilin",
  "license": "GPL-3.0",
  "main": "src/index.ts",
  "scripts": {
    "clean": "rimraf dist/*",
    "prettier": "prettier --check 'src/**/*.{js,ts,tsx}'",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet",
    "lint-junit": "eslint '*/**/*.{js,ts,tsx}' -f junit -o reports/eslint/junit.xml",
    "tsc": "tsc --project tsconfig.production.json",
    "build": "npm-run-all clean tsc",
    "dev": "cross-env NODE_ENV=development dotenv -e .env.development nodemon src/index.ts",
    "prod:start": "cross-env NODE_ENV=production NODE_PATH=dist/ dotenv -e .env.production node ./dist/index.js",
    "prod": "npm-run-all build prod:start",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate dev --name postgres-init",
    "test:start": "cross-env NODE_ENV=test dotenv -e .env.test jest --runInBand -- ",
    "test": "npm-run-all migrate:test \"test:start -- {@}\" -- "
  },
  "dependencies": {
    "@prisma/client": "3.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.8",
    "@types/express-oauth-server": "2.0.4",
    "@types/swagger-jsdoc": "6.0.0",
    "@types/swagger-ui-express": "4.1.2",
    "@types/validator": "^13.1.0",
    "cors": "^2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "^8.2.0",
    "dotenv-cli": "4.1.1",
    "express": "^4.17.1",
    "express-oauth-server": "2.0.0",
    "helmet": "4.4.1",
    "http-status-codes": "2.1.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "6.0.6",
    "swagger-ui-express": "4.3.0",
    "typescript": "4.5.4",
    "validator": "^13.1.17",
    "winston": "3.3.4"
  },
  "devDependencies": {
    "@types/faker": "^5.1.2",
    "@types/jest": "^26.0.14",
    "@types/node": "14.18.5",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.0.0",
    "faker": "^5.1.0",
    "jest": "27.3.1",
    "jest-junit": "13.0.0",
    "nodemon": "^2.0.4",
    "prettier": "2.5.1",
    "prisma": "3.7.0",
    "supertest": "^5.0.0",
    "ts-jest": "27.0.7",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0"
  }
}
